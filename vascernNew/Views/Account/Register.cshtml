@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <p>
                0 => ADMIN <br />
                1 => HCP <br />
                2 => ASSOCIATION
            </p>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" required />
            </div>
            <div class="form-group center1 hidden1">
                <label asp-for="HcpCenterId" class="control-label">Hcp</label>
                <select asp-for="HcpCenterId" class="form-control" asp-items="ViewBag.HcpCenterId"></select>
            </div>
            <div class="form-group center2 hidden2">
                <label asp-for="AssociationId" class="control-label">Association</label>
                <select asp-for="AssociationId" class="form-control" asp-items="ViewBag.AssociationId"></select>
            </div>
            <button type="submit" class="btn btn-block btn-success">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <style>
        .hidden2 {
            display: none;
        }
        .hidden1 {
            display: none;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).on("keyup", "#Type", function () {
                if ($(this).val() == "1") {
                    $(".hidden1").removeClass("hidden1");
                } else if ($(this).val() == "2") {
                    $(".hidden2").removeClass("hidden2");
                } else {
                    $(".center1").addClass("hidden1");
                    $(".center2").addClass("hidden2");
                }
            })
        })
        
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
